
sel_arrow_left: sel_arrow_left {
    compatible = "zmk,behavior-mod-morph";
    label = "sel_arrow_left";
    #binding-cells = <0>;
    bindings = <&kp LEFT>, <&sel_left1>;
    mods = <(MOD_LSFT)>;
};


test_a_b: test_a_b {
    compatible = "zmk,behavior-mod-morph";
    label = "test_a_b";
    #binding-cells = <0>;
    bindings = <&kp A>, <&kp B>;
    mods = <(MOD_LSFT)>;
};

test_a_b: test_a_b {
    compatible = "zmk,behavior-mod-morph";
    label = "test_a_b";
    #binding-cells = <0>;
    bindings = <&kp A>, <&macro_test_a_b>;
    mods = <(MOD_LSFT)>;
};

ZMK_MACRO(
    macro_test_a_b,
    wait-ms = <0>;
    tap-ms = <0>;
    bindings
        = <&macro_release &kp LSFT>
        , <&macro_press &kp RS(LEFT)>
        , <&macro_pause_for_release>
        , <&macro_release &kp RS(LEFT)>
        , <&macro_tap &to NAV>
        , <&macro_tap &sl SEL_MODE>
        ;
)

ZMK_MACRO(
    sel_left,
    wait-ms = <0>;
    tap-ms = <0>;
    bindings = < &kp LS(LEFT) &to NAV &sl SEL_MODE >;
)


ZMK_MACRO(
    sel_left1,
    wait-ms = <0>;
    tap-ms = <0>;
    bindings
        = <&macro_release &kp LSFT>
        , <&macro_press &kp LS(LEFT)>
        , <&macro_pause_for_release>
        , <&macro_release &kp LS(LEFT)>
        , <&macro_tap &to NAV>
        , <&macro_tap &sl SEL_MODE>
        ;
)
