ZMK_MACRO(holding_hm_shift_lbkt,
    wait-ms = <0>;
    tap-ms = <0>;
    bindings
        = <&to ALPHA>
        , <&macro_tap &to ALPHA>
        , <&macro_tap &tog SYMBOL>
        , <&macro_press &hold_hm_shift_lbkt 0 0>
        , <&macro_pause_for_release>
        , <&macro_release &hold_hm_shift_lbkt 0 0>
        ;
)

