#define AUTO_SHIFT(letter) \
    MACRO(f_capital_##letter, <&kp LS(letter)>) \
    MACRO(f_letter_##letter, \
        <&macro_press &kp letter>, \
        <&macro_pause_for_release>, \
        <&macro_release &kp letter> \
    ) \
    shifted_##letter: shifted_##letter { \
        compatible = "zmk,behavior-hold-tap"; \
        label = STRINGIFY(shifted_##letter); \
        #binding-cells = <2>; \
        tapping-term-ms = <180>; \
        quick-tap-ms = <180>; \
        flavor = "tap-preferred"; \
        bindings = <&f_capital_##letter>, <&f_letter_##letter>; \
    };


