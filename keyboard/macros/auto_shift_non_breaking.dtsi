#define AUTO_SHIFT_NON_BREAKING(letter) \
    ZMK_MACRO(shifted_nb_##letter, \
        wait-ms = <0>; \
        tap-ms = <10>; \
        bindings \
            = <&kp letter> \
            , <&macro_press &hold_letter_##letter 0 0> \
            , <&macro_pause_for_release> \
            , <&macro_release &hold_letter_##letter 0 0> \
            ; \
    ) \
    ZMK_MACRO(capital_letter_##letter, \
        wait-ms = <0>; \
        tap-ms = <10>; \
        bindings = <&kp BSPC &kp LS(letter)>; \
    ) \
    hold_letter_##letter: hold_letter_##letter { \
        compatible = "zmk,behavior-hold-tap"; \
        label = ZMK_MACRO_STRINGIFY(hold_letter_##letter); \
        #binding-cells = <2>; \
        tapping-term-ms = <180>; \
        flavor = "tap-preferred"; \
        bindings = <&capital_letter_##letter>, <&none>; \
    };


