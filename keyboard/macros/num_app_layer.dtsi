#define NUM_KEY(key) \
    ZMK_MACRO( \
        num_##key, \
        wait-ms = <0>; \
        tap-ms = <0>; \
        bindings \
            = <&macro_tap &to ALPHA> \
            , <&macro_tap &tog NUM_APP> \
            , <&macro_press &kp key> \
            , <&macro_pause_for_release> \
            , <&macro_release &kp key> \
           ; \
)




