#define DOUBLE_KEY(name, holdKey) \
    MACRO(double_macro_##name, \
          <&macro_tap &kp holdKey> \
        , <&macro_pause_for_release> \
    ) \
    double_key_##name: double_key_##name { \
        compatible = "zmk,behavior-hold-tap"; \
        label = STRINGIFY(double_key_##name); \
        #binding-cells = <2>; \
        tapping-term-ms = <180>; \
        flavor = "tap-preferred"; \
        bindings = <&double_macro_##name>, <&kp>; \
    };

#define DOUBLE_KEY_WITH_MACRO(name, pressMacro) \
    double_key_macro_##name: double_key_##name { \
        compatible = "zmk,behavior-hold-tap"; \
        label = STRINGIFY(double_key_##name); \
        #binding-cells = <2>; \
        tapping-term-ms = <180>; \
        flavor = "tap-preferred"; \
        bindings = <&kp>, <&pressMacro>; \
    };

DOUBLE_KEY_WITH_MACRO(paste, paste_macro)
