

hm_bspc: hm_bspc {
    compatible = "zmk,behavior-hold-tap";
    label = "hm_bspc";
    #binding-cells = <2>;
    tapping-term-ms = <120>;
    quick_tap_ms = <180>;
    flavor = "hold-preferred";
    bindings = <&kp>, <&kp>;
    retro-tap;
};



